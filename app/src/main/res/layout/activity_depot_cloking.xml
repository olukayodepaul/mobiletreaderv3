<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.mobile.mtrader.ui.DepotClokingActivity"
android:orientation="vertical">

<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay"
    android:id="@+id/nav_fix">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="2dip"
                    tools:ignore="ContentDescription"
                   />

                <ImageView
                    android:id="@+id/back_page"
                    android:layout_width="32dip"
                    android:layout_height="36dip"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/button"
                    tools:ignore="ContentDescription"
                    android:src="@drawable/white_array"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="8dip"
                android:paddingEnd="8dip"
                android:layout_toEndOf="@+id/back_button"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dip"
                    android:paddingEnd="8dip"
                    android:text="Stock Collection"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dip"
                    android:paddingEnd="8dip"
                    android:text="Attendance"
                    android:textColor="@color/colorWhite"
                    android:textSize="13sp"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/rec_lat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:layout_below="@+id/nav_fix"
        android:layout_marginBottom="95dp"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="18dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            >
            <TableRow>
                <TextView
                    android:id="@+id/items"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="ITEM"
                    android:gravity="left"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/qty"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="QTY"
                    android:gravity="left"
                    android:textStyle="bold"
                    />
            </TableRow>
        </TableLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_baskets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/resume_below"
        android:layout_alignParentStart="true"

        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="18dp"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/underline"
            >
            <TableRow>
                <TextView
                    android:id="@+id/totalitems"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:text="Total"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/totalqty"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="QTY"
                    android:textStyle="bold"
                   />
            </TableRow>
        </TableLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/resume_below"
        >

        <Button
            android:id="@+id/resume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/design_login_btn"
            android:minWidth="16dp"
            android:minHeight="16dp"
            android:padding="10dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Resume"
            android:textAllCaps="false"
            android:textColor="@color/white_color"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hostproressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
</RelativeLayout>