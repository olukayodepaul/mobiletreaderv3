<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobile.mtrader.ui.DepotClockoutActivity"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/nav_fix">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="2dip"
                        tools:ignore="ContentDescription"
                        />

                    <ImageView
                        android:id="@+id/back_page"
                        android:layout_width="32dip"
                        android:layout_height="36dip"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/button"
                        tools:ignore="ContentDescription"
                        android:src="@drawable/white_array"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="8dip"
                    android:paddingEnd="8dip"
                    android:layout_toEndOf="@+id/back_button"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dip"
                        android:paddingEnd="8dip"
                        android:text="Stock Return"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dip"
                        android:paddingEnd="8dip"
                        android:text="Close"
                        android:textColor="@color/colorWhite"
                        android:textSize="13sp"/>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/rec_lat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:layout_below="@+id/nav_fix"
        android:layout_marginBottom="95dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_line"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/items"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/roboto_regular"
                android:paddingBottom="5dp"
                android:text="SKU"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/qty"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="4dp"
                android:layout_toStartOf="@+id/order"
                android:fontFamily="@font/roboto_regular"
                android:paddingBottom="5dp"
                android:text="QTY SOLD"
                android:textAlignment="textEnd"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/basket"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_regular"
                android:paddingBottom="5dp"
                android:text="BASKET"
                android:textAlignment="textEnd"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order"
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/roboto_regular"
                android:paddingBottom="5dp"
                android:text="RETURN"
                android:textAlignment="textEnd"
                android:textSize="12dp"
                android:textStyle="bold" />

        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/user_baskets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/resume_below"
        android:layout_alignParentStart="true"

        >
        <TextView
            android:id="@+id/items_t"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/roboto_regular"
            android:paddingBottom="5dp"
            android:text=""
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/qty_t"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/order_t"
            android:fontFamily="@font/roboto_regular"
            android:paddingBottom="5dp"
            android:text="0.0"
            android:textAlignment="textEnd"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/basket_t"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_regular"
            android:paddingBottom="5dp"
            android:text="0.0"
            android:textAlignment="textEnd"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_t"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/roboto_regular"
            android:paddingBottom="5dp"
            android:text="0.0"
            android:textAlignment="textEnd"
            android:textSize="12dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/resume_below"

        >
        <Button
            android:id="@+id/payments_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/map_buttons"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:text="Close"
            android:textColor="#ffffff"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/roboto_bold"/>
    </RelativeLayout>

</RelativeLayout>