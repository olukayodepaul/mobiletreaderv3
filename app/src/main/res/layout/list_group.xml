<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pst"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/trigger_attendant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/indicator_green"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/indicator_grreen"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/indicator_red"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/indicator_reds"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/modulesnames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="46dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Sales"
                android:textColor="@color/dip_blue"
                android:textSize="16sp"
                android:layout_marginLeft="33dp"/>

            <RelativeLayout
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/modulesnames"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/icon_image"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="33dp"
                >

                <ImageView
                    android:id="@+id/times_image"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/time_ago"
                    android:layout_marginRight="5dp"
                    />

                <TextView
                    android:id="@+id/times"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/times_image"
                    android:text="00:00:00"
                    android:textColor="@color/dip_blue"
                    android:textSize="11sp"
                    android:fontFamily="@font/roboto_light"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/refresh_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/array_list" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>