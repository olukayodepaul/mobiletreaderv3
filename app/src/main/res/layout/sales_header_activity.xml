<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/sku"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Sku"
        app:layout_constraintEnd_toStartOf="@+id/order"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1.7"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp"
        android:fontFamily="@font/roboto_bold"
      />

    <TextView
        android:id="@+id/order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Inventory"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toStartOf="@+id/price"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="0.8"
        app:layout_constraintStart_toEndOf="@+id/sku"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="1dp"
        android:fontFamily="@font/roboto_bold"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Pricing"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toStartOf="@+id/invent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="0.6"
        app:layout_constraintStart_toEndOf="@+id/order"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="1dp"
        android:fontFamily="@font/roboto_bold"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/invent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Order"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toStartOf="@+id/tv_price"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintStart_toEndOf="@+id/price"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="1dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/roboto_bold"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="0.9"
        app:layout_constraintStart_toEndOf="@+id/invent"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints"
        android:textAlignment="textEnd"
        android:fontFamily="@font/roboto_bold"
        android:maxLines="1"
        android:ellipsize="end"/>


</android.support.constraint.ConstraintLayout>
